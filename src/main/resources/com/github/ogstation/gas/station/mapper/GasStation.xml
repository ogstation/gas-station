<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.ogstation.gas.station.domain.GasStation">
    <resultMap id="gasStationResultMap" type="GasStation">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="provinceCode" column="province_code" />
        <result property="cityCode" column="city_code" />
        <result property="countryCode" column="country_code" />
        <result property="addressDetails" column="address_details" />
        <result property="contact" column="contact" />
        <result property="telephone" column="telephone" />
        <result property="phone" column="phone" />
        <result property="email" column="email" />
        <result property="postcode" column="postcode" />
        <result property="homepage" column="homepage" />
    </resultMap>
    
    <insert id="insertGasStation" parameterType="GasStation" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO gas_station (id, name, province_code, city_code, country_code, address_details, contact, telephone, phone, email, postcode, homepage)
        VALUES (#{id}, #{name}, #{provinceCode}, #{cityCode}, #{countryCode}, #{addressDetails}, #{contact}, #{telephone}, #{phone}, #{email}, #{postcode}, #{homepage});
    </insert>

    <select id="getAllGasStations" resultMap="gasStationResultMap">
        SELECT *
        FROM gas_station
    </select>

    <select id="getGasStationById" parameterType="String" resultMap="gasStationResultMap">
        SELECT *
        FROM gas_station
        WHERE id = #{id};
    </select>

    <select id="getGasStationByName" parameterType="String" resultMap="gasStationResultMap">
        SELECT *
        FROM gas_station
        WHERE name = #{name};
    </select>

    <select id="getGasStationsByPageable" parameterType="Pageable" resultMap="gasStationResultMap">
        SELECT *
        FROM gas_station
        LIMIT #{pageSize} OFFSET #{offset}
    </select>
    
    <update id="updateGasStation" parameterType="GasStation">
        UPDATE gas_station
        SET
            name = #{name},
            province_code = #{provinceCode},
            city_code = #{cityCode},
            country_code = #{countryCode},
            address_details = #{addressDetails},
            contact = #{contact},
            telephone = #{telephone},
            phone = #{phone},
            email = #{email},
            postcode = #{postcode},
            homepage = #{homepage}
        WHERE id = #{id};
    </update>
    
    <delete id="deleteGasStation" parameterType="String">
        DELETE
        FROM gas_station
        WHERE id = #{id};
    </delete>

</mapper>
